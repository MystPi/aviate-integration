{
  "name": "Aviate Integration",
  "description": "Integrate Aviate with the Scratch Discussion Forums",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "js": ["main.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/icon.svg"],
      "matches": ["https://scratch.mit.edu/*"]
    }
  ]
}
